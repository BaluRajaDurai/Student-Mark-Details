<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marksheet</title>
    <link rel="stylesheet" href="/public/css/marksheet.css">
</head>
<body>
    <div class="container">
        <div class="sub-container">
            <table>
                <h1>Student Marks</h1>
                <tr>
                    <th rowspan="2">S.No</th>
                    <th rowspan="2">Rollno</th>
                    <th rowspan="2">Name</th>
                    <th rowspan="2">Email</th>
                    
                </tr>
                <tr>
                    <th>Subject 1</th>
                    <th>Subject 2</th>
                    <th>Subject 3</th>
                    <th>Subject 4</th>
                    <th>Average Mark</th>
                </tr>
                <% if(data.length != 0){%>
                <%var i =1;%>
                <%data.forEach((row)=>{%>
                <tr>
                    <td><%=i%></td>
                    <td><%=row.rollno%></td>
                    <td><%=row.name%></td>
                    <td><%=row.email%></td>
                    <td><%=row.subject1%></td>
                    <td><%=row.subject2%></td>
                    <td><%=row.subject3%></td>
                    <td><%=row.subject4%></td>
                    <td><%=Math.round((row.subject1+row.subject2+row.subject3+row.subject4)/4) %></td>
                </tr>
                <%i++; });%>
                <% } else {%>
                    <tr>
                        <td colspan="9" class="last">No data Found</td>
                    </tr>
                    <%}%>
            </table>
        </div>
    </div>
</body>
</html>